<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.gigamole.library.PulseView
        android:id="@+id/pv"
        android:layout_width="250dp"
        android:layout_height="300dp"
        app:pv_icon="@drawable/light_fire"
        app:pv_alpha="70"
        app:pv_color="@color/colorAccent"
        android:layout_centerInParent="true"
        app:pv_count="2"
        app:pv_measure="height"
        app:pv_icon_width="145dp"
        app:pv_icon_height="145dp"
        app:pv_spawn_period="1500"
        app:pv_interpolator="@android:anim/linear_interpolator"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/colorPrimary"
        android:text="@string/there_are_no_scorching_places_nearby"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:id="@+id/share_button"
        android:text="@string/invite_friends_txt"
        android:background="@drawable/gradient_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="55dp"
        android:layout_alignBottom="@+id/pv"
        android:layout_alignLeft="@+id/pv"
        android:layout_alignStart="@+id/pv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.313" />





</android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>